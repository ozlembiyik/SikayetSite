                    <nav class="main_nav">

                    </nav>

                    <div class="log_reg">
                        <ul class="d-flex flex-row align-items-center justify-content-start">

                            @if (!this.User.Identity.IsAuthenticated)//kullanıcı giriş yapmadıysa
                            {
                                <li class="active" data-toggle="modal" data-target="#loginModal"> <a href="">Giriş Yap</a></li>
                                <li><a href="@Url.Action("Register", "Account")">Üye Ol</a></li>
                            }

                            @if (this.User.Identity.IsAuthenticated)//giriş yaptıysa
                            {
                                <li class="active"><a href="@Url.Action("LogOff", "Account")">Çıkış Yap</a></li>
                            }

                        </ul>
                    </div>
                    <div class="add_listing text-center trans_200"><a href="@Url.Action("Create", "Complaint")">Şikayet Yaz</a></div>
                    <div class="hamburger">
