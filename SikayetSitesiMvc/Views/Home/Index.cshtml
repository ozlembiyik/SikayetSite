    <div class="modal fade" id="loginModal" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Giriş</h4>
                </div>
                <div class="modal-body">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" />
                </div>
                <div class="modal-body">
                    <label for="pass">Şifre</label>
                    <input type="password" name="pass" id="pass" class="form-control" />
                </div>
                <form >


                    @{
                        Html.RenderAction("Giris","Account");
                     }
                    <div class="modal-footer">
                        <button type="button" name="login_button" id="login_button" class="btn btn-warning" data-dismiss="modal">Giriş</button>
                    </div>
                </form>
                

                <p>
                    <a href="/Account/Register" style="margin-left:10px">Register as a new user</a>
                </p>

                <p>
                    <a href="/Account/ForgotPassword" style="margin-left:10px;">Forgot your password?</a>
